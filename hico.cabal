name:                hico
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/hico#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2018 Author name here
category:            Web
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md
data-dir:              
  assets
data-files:            fonts/PICO-8.ttf

library
  hs-source-dirs:      src
  exposed-modules:     Hico
  other-modules:       Hico.Game
                     , Hico.Config.Cli
                     , Hico.Internal.Types
                     , Hico.Internal.InputHandling
                     , Hico.Types
  default-extensions: Strict
  ghc-options:       -O2
                     -fno-warn-name-shadowing
                     -fwarn-unused-imports
                     -funbox-strict-fields
                     -fexpose-all-unfoldings
                     -fspecialise-aggressively
  build-depends:       base >= 4.7 && < 5
                     , bytestring
                     , text
                     , free
                     , lens
                     , mtl
                     , optparse-applicative
                     , sdl2
                     , sdl2-image
                     , sdl2-ttf
                     , symbol
  default-language:    Haskell2010

executable jump
  hs-source-dirs:      examples/JumpGame
  main-is:             Main.hs
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                     , hico
                     , containers
                     , optparse-applicative

executable hello
  hs-source-dirs:      examples/Hello
  main-is:             Main.hs
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                     , hico
                     , optparse-applicative
